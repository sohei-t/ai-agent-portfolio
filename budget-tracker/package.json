{
  "name": "budget-tracker-spa",
  "version": "1.0.0",
  "description": "WBS-like Task & Progress Management Web App (SPA Architecture)",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --verbose --forceExit",
    "test:coverage": "jest --coverage --verbose --forceExit",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "compression": "^1.7.0",
    "cors": "^2.8.0",
    "express": "^4.18.0",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "nodemon": "^3.0.0",
    "supertest": "^6.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/worktrees/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/pdf_converter.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Budget Tracker Team",
  "license": "MIT"
}
